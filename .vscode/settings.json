{
  "prisma.fileWatcher": false,
  "prisma.trace.server": "messages",
  "files.associations": {
    "*.prisma": "prisma"
  },
  "files.watcherExclude": {
    "**/client/**/*.prisma": true
  },
  "files.exclude": {
    "**/.git": true,
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/logs": true,
    "src/app/db/*/client": true
  },
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "[prisma]": {
    "editor.semanticHighlighting.enabled": true,
    "editor.suggest.showWords": false
  },
  "prisma.enableDiagnostics": true,
  "github.copilot.chat.instructionFiles": [
    {
      "file": ".copilot-instructions.md",
      "enabled": true
    },
    {
      "file": ".vscode/copilot-patterns.md",
      "enabled": true
    }
  ],
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false
  },
  "github.copilot.chat.welcomeMessage": "always",
  "github.copilot.chat.localeOverride": "ko"
}
