{
  "watch": ["src", ".env*"],
  "ext": "ts,js,json,env",
  "ignore": [
    "src/core/tmp/**/*",
    "src/core/lib/types/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/node_modules/**"
  ],
  "exec": "npm run generate && ts-node ./src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000
}
